<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="ymajoros">
        <addColumn tableName="item">
            <column name="main_picture_id" type="bigint(20)" />
        </addColumn>
    </changeSet>

    <changeSet id="2" author="ymajoros">
        <createTable tableName="itemvariant_picture">
            <column name="id" type="bigint(20)">
                <constraints primaryKey="true" />
            </column>
            <column name="itemvariant_id" type="bigint(20)" />
            <column name="picture_data" type="mediumblob" />
            <column name="content_type" type="varchar(128)" />
        </createTable>
    </changeSet>

    <changeSet id="3" author="ymajoros">
        <addForeignKeyConstraint 
            constraintName="fk_itemvariant_main_picture" 
            baseTableName="item" 
            baseColumnNames="main_picture_id" 
            referencedTableName="itemvariant_picture" 
            referencedColumnNames="id"
        />
    </changeSet>

    <changeSet id="4" author="ymajoros">
        <addForeignKeyConstraint 
            constraintName="fk_itemvariant_picture_item" 
            baseTableName="itemvariant_picture" 
            baseColumnNames="itemvariant_id" 
            referencedTableName="item" 
            referencedColumnNames="id"
        />
    </changeSet>


</databaseChangeLog>
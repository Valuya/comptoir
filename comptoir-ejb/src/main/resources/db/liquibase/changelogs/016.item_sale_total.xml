    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1" author="ymajoros">
        <addColumn tableName="item_sale">
            <column name="total" type="decimal(20,4)" />
        </addColumn>
    </changeSet>
    
    <changeSet id="2" author="ymajoros">
        <addColumn tableName="price">
            <column name="discount_ratio" type="decimal(38,0)" />
        </addColumn>
    </changeSet>

    <changeSet id="3" author="ymajoros">
        <dropColumn tableName="item_sale" columnName="discount_ratio" />
    </changeSet>



</databaseChangeLog>